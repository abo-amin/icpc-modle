
<!DOCTYPE html>
 <html lang="ar">
 <head>
     <meta charset="utf-8"> 
     <meta name="viewport" content="width=device-width, initial-scale=1"> 
     <title>@ViewData["Title"]</title> 
     <link rel="stylesheet" href="~/css/site.css"> 
 </head> 
 <body> 
     <header> 
         <nav> 
             <ul> 
                 <li><a asp-controller="Home" asp-action="Index">الرئيسية</a></li> 
                 @if (Context.Session.GetString("UserEmail") != null) 
                 { 
                     <li><a asp-controller="Auth" asp-action="Logout">تسجيل الخروج</a></li> 
                 } 
                 else 
                 { 
                    <li><a asp-controller="Auth" asp-action="Login">تسجيل الدخول</a></li> 
                } 
             </ul> 
         </nav> 
    </header> 

    <main> 
         @RenderBody() 
   </main> 
 </body> 
</html>
